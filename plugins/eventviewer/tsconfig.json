{
    "compilerOptions": {
        "target": "ES2020",
        "module": "AMD",
        "sourceMap": true,
        "declaration": true,
        // "outDir": "./dist",
        "outFile": "index.js",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
    },
    "include": [
        "**/*.ts",
        "@types/**/*.ts",
        "../../@types/**/*.ts"
    ]
}