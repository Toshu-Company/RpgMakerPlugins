{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable"
        ],
        "module": "AMD",
        "sourceMap": true,
        "declaration": true,
        // "outDir": "./dist",
        "outFile": "index.jsx",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
    },
    "include": [
        "src",
        "@types/**/*.ts",
        "../../@types/**/*.ts"
    ]
}